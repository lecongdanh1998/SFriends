<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorRedButton">

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/txt_des_address_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_margin"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2dp"
        android:text="Vous habiterez comme un local dans le quartier entre Le Marais et  Grands Boulevards . Le quartier est Arty et authentique (Cuisine créative, boutiques mode, cafés trendy)."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textMedium"
        app:colorClickableText="@color/colorPrimaryDark"
        app:showTrimExpandedText="true"
        app:trimCollapsedText="less"
        app:trimExpandedText="Read more"
        app:trimLines="3"
        app:trimMode="trimModeLine" />
</android.support.v7.widget.CardView>
