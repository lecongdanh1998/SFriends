<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="140dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    <RelativeLayout
        android:id="@+id/RelativeLayoutMainGirdView"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <RelativeLayout
            android:alpha="0.6"
            android:background="@drawable/custom_background_button_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></RelativeLayout>
        <ImageView
            android:id="@+id/imagesMainGridview"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/color_Purple"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </RelativeLayout>
    <TextView
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="25dp"
        android:id="@+id/txtMainGridview"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Thanh toán dịch vụ"
        android:textSize="11sp"
        android:layout_below="@+id/RelativeLayoutMainGirdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>