<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".View.HomePage.RealEstate.DetailsEstimate">

    <include
        android:id="@+id/toolbar_details"
        layout="@layout/tool_bar_details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_details"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context="com.sample.foo.usingcoordinatorlayout.FabAndSnackbarActivity">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="0dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleMarginEnd="64dp"
                    app:expandedTitleMarginStart="48dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:id="@+id/toolbarImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimens_margin"
                        android:fitsSystemWindows="true"
                        android:src="@drawable/logo_nks"
                        app:layout_collapseMode="parallax" />
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_padding"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="2dp"
                        android:text="CN Tower from a Chic Downtown Condo"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="38dp" />

                    <TextView
                        android:id="@+id/txt_host_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:lineSpacingExtra="2dp"
                        android:text="Hosted by Lena &amp; Dimitri"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textMedium" />

                    <TextView
                        android:id="@+id/txt_contents_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_margin"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="2dp"
                        android:lines="3"
                        android:text="Contemplate the gorgeous skyline from the charming balcony of this fully furnished, modern condo. Cook dinner in the kitchen or make reservations at a nearby restaurant. Enjoy access to a lap pool, gym, sauna, and game room."
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textMedium" />

                    <TextView
                        android:id="@+id/txt_translate_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginTop"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="2dp"
                        android:text="Translate"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textMedium" />

                    <TextView
                        android:id="@+id/txt_other_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginTop"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="2dp"
                        android:text="2   guests   Studio   1 bed   1 bath"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textMedium" />

                    <!--Amenities-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Amenities"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textLager" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:stretchColumns="*">

                                <TableRow>

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon1" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon2" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon3" />
                                </TableRow>

                                <TableRow>

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon4" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon5" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon6" />
                                </TableRow>

                                <TableRow>

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon7" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon8" />

                                    <ImageView
                                        android:layout_width="@dimen/img_ameities"
                                        android:layout_height="@dimen/img_ameities"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon9" />

                                </TableRow>
                            </TableLayout>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Show all  15 amenities"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textLager" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <!--Location-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Location"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textLager" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_medium"
                            android:text="2e arrondissement, Paris, Île-de-France, France"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:lines="3"
                            android:text="Vous habiterez comme un local dans le quartier entre Le Marais et  Grands Boulevards . Le quartier est Arty et authentique (Cuisine créative, boutiques mode, cafés trendy)."
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textMedium" />

                        <TextView
                            android:id="@+id/txt_translate2_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marginTop"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="2dp"
                            android:text="Translate"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Distance de Aéroport de Paris-Orly"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_regular"
                            android:text="21 minutes en voiture, sans trafic"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textMedium" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:background="@drawable/map1" />
                    </LinearLayout>

                    <!--line-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimens_margin"
                        android:background="@color/colorGray" />

                    <!--Reviews-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Reviews"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textLager" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar_reviews"
                                android:layout_width="@dimen/avatar_reviews"
                                android:layout_height="@dimen/avatar_reviews"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/logo_nks" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/marginTop"
                                android:layout_toRightOf="@id/avatar_reviews"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_name_reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Robert"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textMedium" />

                                <TextView
                                    android:id="@+id/txt_time_reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="2 days ago"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textMedium" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/avatar_reviews">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_margin"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:lines="2"
                                    android:text="Un loft très bien situé à pied : à 10 minutes de la gare de l'est, 15 minutes de la gare du Nord et à quelques pas du Grand Rex. On trouve"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textMedium" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimens_margin"
                        android:background="@color/colorGray" />

                    <!--Rules-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Cancellation conditions and rules of procedure"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textLager" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_margin"
                            android:fontFamily="@font/roboto_regular"
                            android:text="This accommodation is subject to strict cancellation conditions (with grace period). If you cancel within 48 hours of booking and at least 14 days before arrival, you will receive a full refund."
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marginTop"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="2dp"
                            android:text="Read all conditions and rules of procedure"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textMedium" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimens_margin"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
</RelativeLayout>