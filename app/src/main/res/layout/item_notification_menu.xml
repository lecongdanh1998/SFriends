<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/txt_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:padding="@dimen/padding_item_menu"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textLager" />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/txt_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_badge" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_badge_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/padding_item_menu"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@color/color_WhiteTextView"
            android:textSize="@dimen/textSmall" />
    </RelativeLayout>
</RelativeLayout>