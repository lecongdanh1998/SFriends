<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.edu.poly.sfriends">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconapp1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name=".View.MainActivity" />
        <activity
            android:name=".View.SignIn.SignIn"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".View.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:scheme="@string/fb_login_protocol_scheme"
                    tools:ignore="ManifestResource" />
            </intent-filter>
        </activity>
        <activity android:name=".View.HomePage.WebView.WebViewMain" />
        <activity android:name=".View.Intro.Intro" />
        <activity android:name=".View.SignUp.SignUp" />
        <activity android:name=".View.HomePage.Sarena.Sarena" />
        <activity android:name=".View.HomePage.Senate.Senate" />
        <activity android:name=".View.HomePage.Sagora.Sagora" />
        <activity
            android:name=".View.User.UserActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".View.User.QR.QRUserActivity" />
        <activity android:name=".View.HomePage.RealEstate.RealEstate" />
        <activity android:name=".View.HomePage.RealEstate.DetailsListImage" />
        <activity android:name=".View.HomePage.RealEstate.SearchMap" />
        <activity android:name=".View.HomePage.RealEstate.DetailsEstimate" />
        <activity android:name=".View.HomePage.RealEstate.DetailsItemMap" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/key_google_api" />

        <activity android:name=".View.HomePage.RealEstate.SearchMap" />
        <activity android:name=".View.HomePage.RealEstate.DetailsItemMap" />
        <activity android:name=".View.HomePage.RealEstate.DetailsEstimate" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider352185958922539"
            android:exported="true"
            tools:ignore="WrongManifestParent" />

        <activity android:name=".View.User.Medal.MemberActivity" />
        <activity android:name=".View.User.Medal.HistoryPoint.HistoryPointActivity" />
        <activity android:name=".View.User.Medal.Gift_store.GiftStoreActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:configChanges="keyboardHidden|screenSize"
            ></activity>
    </application>

</manifest>