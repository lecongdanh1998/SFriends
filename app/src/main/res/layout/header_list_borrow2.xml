<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/dimens_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ki_thanh_toan"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Kì thanh toán"
            android:textSize="@dimen/textMedium" />

        <TextView
            android:id="@+id/txt_du_no_dau_ki"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginTop"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Dư nợ đầu kì"
            android:textSize="@dimen/textMedium" />

        <TextView
            android:id="@+id/txt_lai_thanh_toan"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginTop"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Lãi thanh toán hàng tháng"
            android:textSize="@dimen/textMedium" />

        <TextView
            android:id="@+id/txt_goc_thanh_toan"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginTop"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Gốc thanh toán hàng tháng"
            android:textSize="@dimen/textMedium" />

        <TextView
            android:id="@+id/txt_du_no"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginTop"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Dư nợ cuối kì"
            android:textSize="@dimen/textMedium" />

        <TextView
            android:id="@+id/txt_tien_hang_thang"
            android:layout_width="@dimen/width_item_borrow"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/marginTop"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left"
            android:lines="1"
            android:text="Khoản tiền trả hàng tháng"
            android:textSize="@dimen/textMedium" />
    </LinearLayout>
</HorizontalScrollView>